<%- include('includes/header') %>
<div class="container">
    <!-- Displaying success message -->
    <% if (success_message.length > 0) { %>
      <div class="demo-spacing-0 col-6" style="margin-left: 320px;">
        <div class="alert alert-success" role="alert">
          <div class="alert-body"><strong> <%= success_message %> </strong></div>
        </div>
      </div>
    <% } %>
    <!-- Displaying error message -->
    <% if (error_message.length > 0) { %>
      <div class="demo-spacing-0 col-6" style="margin-left: 320px;">
        <div class="alert alert-danger" role="alert">
          <div class="alert-body"><strong> <%= error_message %> </strong></div>
        </div>
      </div>
    <% } %>
    <br>
  </div>
<div class="container" style="margin-top: 50px;">
    <form action="/forgot-password" method="POST" autocomplete="off" style="margin-left: 350px;">
      <div class="form-group">
        <label>Email address</label>
        <input type="email" class="form-control" name="email" placeholder="Enter email" style="width: 500px">
      </div>
      <button type="submit" class="btn btn-primary">Send Email</button>
    </form>
  </div>

<%- include('includes/footer') %>