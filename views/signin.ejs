<%- include('includes/header') %>

<div class="container">
    <h1 style="margin-left: 500px;">Sign In</h1>
  </div>

<div class="container">
  <!-- Displaying error message during fillup the form -->
  <% if (typeof alert !== 'undefined') { %>
    <% alert.forEach(function(error) {  %>
      <div class="demo-spacing-0 col-6" style="margin-left: 320px;">
        <div class="alert alert-warning" role="alert">
          <div class="alert-body"><strong> <%= error.msg %> </strong></div>
        </div>
      </div>
    <% }) %>
  <% } %>
  <!-- Displaying success message -->
  <% if (success_message.length > 0) { %>
    <div class="demo-spacing-0 col-6" style="margin-left: 320px;">
      <div class="alert alert-success" role="alert">
        <div class="alert-body"><strong> <%= success_message %> </strong></div>
      </div>
    </div>
  <% } %>
  <!-- Displaying error message -->
  <% if (error_message.length > 0) { %>
    <div class="demo-spacing-0 col-6" style="margin-left: 320px;">
      <div class="alert alert-danger" role="alert">
        <div class="alert-body"><strong> <%= error_message %> </strong></div>
      </div>
    </div>
  <% } %>
  <br>
</div>

<div class="container" style="margin-top: 50px;">
  <form action="/signin" method="POST" autocomplete="off" style="margin-left: 350px;">
    <div class="form-group">
      <label>Email address</label>
      <input type="email" class="form-control" name="email" placeholder="Enter email" style="width: 500px">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="password" placeholder="Password" style="width: 500px" required>
      <span><a href="/forgot-password">Forgot Password</a></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<%- include('includes/footer') %>